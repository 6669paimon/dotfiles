{
  "layer": "top",
  "modules-left": [
    "hyprland/workspaces",
    "group/processing"
  ],
  "modules-center": [
    "hyprland/window"
  ],
  "modules-right": [
    "hyprland/language",
    "custom/separator",
    "battery",
    "custom/separator",
    "network",
    "custom/separator",
    "pulseaudio",
    "custom/separator",
    // "custom/clock",
    "clock",
    "custom/separator",
    "tray",
    "custom/power-menu"
  ],
  "custom/separator": {
    "format": "â•·",
    "tooltip": false
  },
  "hyprland/workspaces": {
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "format": "{}",
    "format-icons": {
      "urgent": "",
      "active": "",
      "default": ""
    },
    "persistent-workspaces": {
      "*": 5
    }
  },
  "disk": {
    "format": "ó°‹Š  {percentage_used}%",
    "interval": 20,
    "path": "/"
  },
  "memory": {
    "format": "ï”  {}%",
    // "format": "î¾–   {}%",
    "tooltip-format": "{used}/{total} GiB",
    "interval": 5
  },
  "cpu": {
    "format": "ó°›  {usage}%",
    // "format": "ï‹›   {usage}%",
    // "format": "ï’¼   {usage}%",
    "interval": 5
  },
  "temperature": {
    "hwmon-path-abs": "/sys/devices/platform/coretemp.0/hwmon",
    "input-filename": "temp1_input",
    "critical-threshold": 80,
    "interval": 2,
    "format": "{icon} {temperatureC}Â°C",
    "format-icons": [
      "ï‹‹",
      "ï‹Š",
      "ï‹‰",
      "ï‹ˆ",
      "ï‹ˆ"
    ],
    "tooltip": false
  },
  "group/processing": {
    "orientation": "inherit",
    "modules": [
      "custom/separator",
      "disk",
      "custom/separator",
      "memory",
      "custom/separator",
      "temperature",
      "custom/separator",
      "cpu",
      "custom/separator"
    ]
  },
  "hyprland/window": {
    "format": "{}",
    "max-length": 50,
    "rewrite": {
      "(.*) - Brave": "$1",
      "(.*) - Chromium": "$1",
      "(.*) - Google Chrome": "$1",
      "(.*) - Brave Search": "$1",
      "(.*) - Outlook": "$1",
      "(.*) Microsoft Teams": "$1"
    },
    "separate-outputs": true
  },
  "battery": {
    "interval": 60,
    "align": 0,
    "rotate": 0,
    "full-at": 100,
    "design-capacity": false,
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon}  {capacity}%",
    "format-charging": "ï—§  {capacity}%",
    "format-plugged": "ï‡¦  {capacity}%",
    "format-full": "{icon}  Full",
    "format-alt": "{icon}  {time}",
