  },
  // "custom/clock": {
  //   "exec": "~/scripts/clock.sh",
  //   "interval": 60,
  //   "format": "{}"
  // },
  "clock": {
    "interval": 60,
    "align": 0,
    "rotate": 0,
    "format": "{:%d %b, %H:%M}",
    "format-alt": "{:%a %b %d, %G}",
    "tooltip-format": "<big>{:%B %Y}</big>\n<tt><small>{calendar}</small></tt>",
    "timezone": "Asia/Bangkok"
  },
  "custom/power-menu": {
